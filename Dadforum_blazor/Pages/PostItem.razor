@page "/api/posts/{id}"

@using Dadforum_blazor.Data;
@using shared.Model;
@inject ApiService apiService

<PageTitle>Dadforum Tr√•d</PageTitle>

@if (Post == null)
{
    <p><em>Loading...</em></p>
}
else 
{
    <div class="contents">
        <h4>@Post.NameOfAuthor</h4>
        <p>@Post.PostString</p>
    </div>

    <div class="contents">
        <h4>Comment</h4>
        <table>
            <tr>
                <th>Username</th>
                <th>Comment</th>
                <th colspan="3">Votes</th>
            </tr>
            @foreach (var comment in Post.Comments)
            {
                <tr>
                    <td>@comment.CommentString</td>
                    <td>@comment.Upvotes</td>
                    <td>@comment.Downvotes</td>
                    <td><button @onclick="() => Upvote(comment.CommentID)"></button></td>
                </tr>
            }
        </table>
    </div>
}

@code
{
    [Parameter]
    public string Id {get; set; }
    public int PostId { get { return int.Parse(Id);} }
    public Post Post { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Post = await apiService.GetPost(PostId);
    }

    private async void Upvote(int id)
